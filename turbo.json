{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalEnv": [
		"NODE_ENV",
		"BETTER_AUTH_URL",
		"CORS_ORIGIN",
		"LOG_LEVEL",
		"MAX_COMMENT_DEPTH",
		"MAX_PLACE_DEPTH",
		"MAX_SERIES_PER_AUTHOR",
		"MAX_BOOKS_PER_SERIE",
		"MAX_CHARACTERS_PER_SERIE",
		"MAX_CHAPTERS_PER_BOOK",
		"SENTRY_PROJECT",
		"SENTRY_ORG"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false,
			"persistent": true
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false
		}
	}
}
